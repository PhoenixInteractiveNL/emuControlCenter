    GtkButton::default_outside_border = {0,0,0,0}

    base[NORMAL]        = "#DDDDE0"
    base[ACTIVE]        = "#DDDDE0"
    base[SELECTED]      = "#4a4a4a"
    base[PRELIGHT]      = "#DDDDE0"
    base[INSENSITIVE]   = "#d0d0d0"

    bg[NORMAL]          = "#E6E6E6"
