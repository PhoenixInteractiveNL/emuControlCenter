style "button" {
  xthickness = 2
  ythickness = 0

	engine "pixmap" {
		image {
			function = BOX
			recolorable = TRUE
			state = NORMAL
			detail = "buttondefault"
			shadow = IN
			file = "button_normal.png"
			border = {12,12,10,10}
			stretch = TRUE
		}
		image {
			function = BOX
			recolorable = FALSE
			state = NORMAL
			shadow = OUT
			file = "button_normal.png"
			border = {12,12,10,10}
			stretch = TRUE
		}
		image {
			function = BOX
			recolorable     = FALSE
			state           = PRELIGHT
			shadow          = IN
			file            = "button_prelight.png"
			border          = {12,12,10,10}
			stretch         = TRUE
		}


		image {
			function = BOX
			recolorable     = FALSE
			state           = ACTIVE
			shadow          = IN
			file            = "button_push.png"
			border          = {12,12,10,10}
			stretch         = TRUE
		}
    image 
      {
        function        = BOX
	recolorable     = TRUE
	state           = PRELIGHT
	shadow          = OUT
	file            = "button_prelight.png"
	border          = {12,12,10,10}
	stretch         = TRUE
      }
    image 
      {
        function        = BOX
	recolorable     = TRUE
	state           = NORMAL
	shadow          = IN
	file            = "button_prelight.png"
	border          = {12,12,10,10}
	stretch         = TRUE
      }
    image 
      {
        function        = BOX
	recolorable     = TRUE
	state           = INSENSITIVE
	shadow          = IN
	file            = "button_flat.png"
	border          = {12,12,10,10}
	stretch         = TRUE
      }
    image 
      {
        function        = BOX
	recolorable     = TRUE
	state           = INSENSITIVE
	shadow          = OUT
	file            = "button_flat.png"
	border          = {12,12,10,10}
	stretch         = TRUE
      }
    image 
      {
        function        = BOX
	recolorable     = TRUE
	state           = SELECTED
	shadow          = IN
	file            = "button_prelight.png"
	border          = {12,12,10,10}
