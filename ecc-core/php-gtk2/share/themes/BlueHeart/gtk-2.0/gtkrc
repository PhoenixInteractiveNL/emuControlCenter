      border			= { 4, 4, 4, 4}
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      recolorable		= TRUE
      state				= PRELIGHT
      file				= "button-prelight.png"
      border			= { 4, 4, 4, 4}
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      recolorable		= TRUE
      state				= ACTIVE
      file				= "button-normal.png"
      border			= { 4, 4, 4, 4}
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      recolorable		= TRUE
      state				= INSENSITIVE
      file				= "button-insensitive.png"
      border			= { 4, 4, 4, 4}
      stretch			= TRUE
    }
    image
    {
      function			= TAB
      recolorable		= TRUE
