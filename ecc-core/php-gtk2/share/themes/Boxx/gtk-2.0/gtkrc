style "entry" 
{
	xthickness = 2
	ythickness = 1

	base[NORMAL]     = "#d0d0d0"

	engine "pixmap" 
  	{
		image 
		{
			function        = FLAT_BOX
			recolorable     = TRUE
			state           = INSENSITIVE
        		detail          = "entry_bg"
			file            = "img/text_entry.png"
			border		= {6,6,6,6 }
			stretch         = TRUE
      		}

    		image 
      		{
			function        = FLAT_BOX
			recolorable     = TRUE
			state           = NORMAL
       			detail          = "entry_bg"
			file            = "img/text_entry.png"
			border		= {6,6,6,6 }
			stretch         = TRUE
      		}

		image 
     	 	{
			function        = FLAT_BOX
			recolorable     = TRUE
			state           = SELECTED
       			detail          = "entry_bg"
			file            = "img/out_sel.png"
			border		= { 3,3,3,3 }
			stretch         = TRUE
      		}


		#This is a transparent shadow.
	  	image 
	      	{
	       		function        = SHADOW
			recolorable     = TRUE
			shadow          = IN
			file            = "img/null.png"
			border          = { 1,1,1,1 }
			stretch         = TRUE
      		}
		image 
     		{
        		function        = FOCUS
			recolorable     = TRUE
			overlay_file    = "img/focus_entry.png"
			overlay_border  = { 2, 2, 2, 2 }
			overlay_stretch = TRUE
      		}
	}
}

