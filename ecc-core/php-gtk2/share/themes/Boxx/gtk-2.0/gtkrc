			function = BOX
			recolorable = TRUE
			state = NORMAL
			detail = "buttondefault"
			shadow = IN
			file = "img/t__button0.png"
			border = {6,6,6,6}
			stretch = TRUE
		}
		image {
			function = BOX
			recolorable = FALSE
			state = NORMAL
			shadow = OUT
			file = "img/t__button0.png"
			border = {6,6,6,6}
			stretch = TRUE
		}
		image {
			function = BOX
			recolorable     = FALSE
