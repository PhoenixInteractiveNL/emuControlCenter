  GtkButton::default_outside_border = { 0, 0, 0, 0 }
  #GtkButton::default_border = { 3,3,3,3 }
  #GtkButton::default_outside_border = { 3,3,3,3 }
  #GtkDialog::action_area_border = {0,0,0,0}

  #Yes or No?
  #GtkWidget::focus_padding = 1

